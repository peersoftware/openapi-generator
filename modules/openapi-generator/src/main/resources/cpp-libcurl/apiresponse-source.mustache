bool ApiResponse::isHttpError() const {
    // 1xx - informational : OK
    // 2xx - successful    : OK
    // 3xx - redirection   : OK
    // 4xx - client error  : not OK
    // 5xx - server error  : not OK
    return m_status >= 400;
}

